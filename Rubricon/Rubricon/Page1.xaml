<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rubricon.Page1"
             Title="Cursos">
    <ContentPage.Content >

        <StackLayout Orientation="Vertical" BackgroundColor="#503496">


            <ListView x:Name="EmployeeView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding DisplayName}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button
                Text="Agregar"
                x:Name="btnAgregarCursos"  
                Clicked="BtnAgregarCursos_Clicked"
                
                ></Button>



        </StackLayout>

       
    </ContentPage.Content>
</ContentPage>